{
  "name": "danoc.me",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "yarn test:eslint && yarn test:prettier",
    "test:eslint": "eslint . --ext .js --ext .jsx --ignore-path .gitignore",
    "test:prettier": "prettier \"**/*.{js,jsx,css,scss,json,md,mdx,html}\" --list-different",
    "format": "prettier \"**/*.{js,jsx,css,scss,json,md,mdx,html}\" --write"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "autoprefixer": "^9.8.0",
    "dotenv": "^8.2.0",
    "gray-matter": "^4.0.2",
    "next": "^9.4.2",
    "prop-types": "^15.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "tailwindcss": "^1.4.6",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "now": "^19.0.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "remark": "^12.0.0",
    "remark-html": "^11.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": "12.x"
  }
